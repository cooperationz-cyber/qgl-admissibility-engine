# Formal QGL Grammar - Prevents invalid expressions at parse time
<program> ::= <structure>+
<structure> ::= <boundary> | <domain> | <qubit-declaration>
<boundary> ::= "boundary" <identifier> "{" <content> "}"
<domain> ::= "domain" <identifier> "{" <state-declaration>+ "}"
<qubit-declaration> ::= "qubit" <identifier> "=" "{" <state> "⊕" <state> "}"
<content> ::= <identifier> ("," <identifier>)*
<state-declaration> ::= <identifier> ("⊕" <identifier>)?
<state> ::= <identifier>
<identifier> ::= [A-Za-z][A-Za-z0-9_]*

